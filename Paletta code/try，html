<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Color Palette Effect</title>
    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            transition: background-color 0.3s ease; /* 平滑过渡背景颜色 */
        }

        .color-palette {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
            max-width: 500px;
        }

        .color-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .color-circle:hover {
            transform: scale(1.1); /* 鼠标悬停时放大 */
        }

        /* 彩色圆形按钮 */
        .color-circle:nth-child(1) {
            background-color: #e74c3c; /* 红色 */
        }

        .color-circle:nth-child(2) {
            background-color: #3498db; /* 蓝色 */
        }

        .color-circle:nth-child(3) {
            background-color: #2ecc71; /* 绿色 */
        }

        .color-circle:nth-child(4) {
            background-color: #f39c12; /* 黄色 */
        }

        .color-circle:nth-child(5) {
            background-color: #9b59b6; /* 紫色 */
        }

        .color-circle:nth-child(6) {
            background-color: #1abc9c; /* 青色 */
        }

        .color-circle:nth-child(7) {
            background-color: #34495e; /* 深灰 */
        }

        .color-circle:nth-child(8) {
            background-color: #e67e22; /* 橙色 */
        }

        .color-circle:nth-child(9) {
            background-color: #95a5a6; /* 浅灰 */
        }

    </style>
</head>
<body>

    <div class="color-palette">
        <div class="color-circle" data-color="#e74c3c"></div>
        <div class="color-circle" data-color="#3498db"></div>
        <div class="color-circle" data-color="#2ecc71"></div>
        <div class="color-circle" data-color="#f39c12"></div>
        <div class="color-circle" data-color="#9b59b6"></div>
        <div class="color-circle" data-color="#1abc9c"></div>
        <div class="color-circle" data-color="#34495e"></div>
        <div class="color-circle" data-color="#e67e22"></div>
        <div class="color-circle" data-color="#95a5a6"></div>
    </div>

    <script>
        // 获取所有的颜色圆形按钮
        const colorCircles = document.querySelectorAll('.color-circle');

        // 给每个颜色按钮添加点击事件
        colorCircles.forEach(circle => {
            circle.addEventListener('click', function () {
                const selectedColor = circle.getAttribute('data-color'); // 获取按钮的颜色值
                document.body.style.backgroundColor = selectedColor; // 更改背景颜色
            });
        });
    </script>

</body>
</html>
